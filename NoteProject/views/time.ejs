.modal {
	display: none;
	height: 100%;
	width: 100%;
	border: none;
	padding: 0;
	background-color: rgba(29, 29, 29, 0.85);
	position: fixed;
}

.popup {
	position: static;
	display: flex;
	flex-direction: column;
	width: 48vw;
	align-items: center;
	margin: 14vh auto 0;
	background-color: #fefdfd;
	border-radius: 10px;
}

.fade-in {
	-webkit-animation: fade-in 0.8s ease-out;
	        animation: fade-in 0.8s ease-out;
}

.fade-out {
	-webkit-animation: fade-out 0.5s ease-out;
	        animation: fade-out 0.5s ease-out;
}

@-webkit-keyframes fade-in {
	0% {
		opacity: 0;
	}

	100% {
		opacity: 1;
	}
}

@keyframes fade-in {
	0% {
		opacity: 0;
	}

	100% {
		opacity: 1;
	}
}

@-webkit-keyframes fade-out {
	0% {
		opacity: 1;
	}

	100% {
		opacity: 0;
	}
}

@keyframes fade-out {
	0% {
		opacity: 1;
	}

	100% {
		opacity: 0;
	}
