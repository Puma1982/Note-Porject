<div class="container">
  <div class="left">
     <div class="calendar">
       <div class="calendar__picture">
        <svg class="bi bi-arrow-left prev" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M10.854 1.146a.5.5 0 0 1 0 .708L5.707 8l5.147 5.146a.5.5 0 0 1-.708.708l-5.5-5.5a.5.5 0 0 1 0-.708l5.5-5.5a.5.5 0 0 1 .708 0z"/>
        </svg>
        <div class="date">May 2023</div>
        <svg class="bi bi-arrow-right next" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M5.146 1.146a.5.5 0 0 1 .708 0l5.5 5.5a.5.5 0 0 1 0 .708l-5.5 5.5a.5.5 0 0 1-.708-.708L10.293 8 5.146 2.854a.5.5 0 0 1 0-.708z"/>
        </svg>
       <div class="month"></div>
      
       </div>
       <div class="weekdays">
         <div>Sun</div>
         <div>Mon</div>
         <div>Tue</div>
         <div>Wed</div>
         <div>Thu</div>
         <div>Fri</div>
         <div>Sat</div>
       </div>
       <div class="days"></div>
       <div class="goto-today">
         <div class="goto">
           <input type="text" placeholder="MM/YYYY" class="date-input" />
           <button class="goto-btn">OK</button>
         </div>
         <button class="today-btn">Now</button>
       </div>
     </div>
   </div>
   <div class="right">
     <div class="today-date">
       <div class="event-day">Sat</div>
       <div class="event-date">13th May 2023</div>
     </div>
     <div class="events"></div>
     <div class="add-event-wrapper">
       <div class="add-event-header">
         <div class="title">New-Event</div>
         <i class="bi bi-x close"></i>

       </div>
       <div class="add-event-body">
         <div class="add-event-input">
           <input type="text" placeholder="Event title" class="event-name" />
         </div>
         <div class="add-event-input">
           <input
             type="text"
             placeholder="Event Start Time"
             class="event-time-from"
           />
         </div>
         <div class="add-event-input">
           <input
             type="text"
             placeholder="Event Finish Time"
             class="event-time-to"
           />
         </div>
       </div>
       <div class="add-event-footer">
         <button class="add-event-btn">+Event</button>
       </div>
     </div>
   </div>
   <button class="add-event">
     <i class="fas">+Event</i>
   </button>
 </div>
 
 
 